{
  "manifest_version": 3,
  "name": "Amazon Floating Modal",
  "version": "3.1",
  "description": "Displays a draggable, resizable, and minimizable modal on Amazon pages.",
  
  "content_scripts": [
    {
      "matches": ["*://www.amazon.com/*"],
      "js": ["content.js"],
      "css": ["modal.css"]
    }
  ],
  
  "permissions": ["activeTab"],
  
  "icons": {
    "128": "icon.png"
  }
}